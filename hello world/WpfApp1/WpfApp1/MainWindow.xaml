<Window x:Class="CameraCaptureTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="摄像头采集工具" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 视频显示区域 -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Margin="10">
            <Image x:Name="CameraImage" Stretch="Uniform"/>
        </Border>

        <!-- 控制按钮区域 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <ComboBox x:Name="CameraComboBox" Width="150" Margin="5"/>
            <Button x:Name="StartButton" Content="开始" Width="60" Margin="5" Click="StartButton_Click"/>
            <Button x:Name="StopButton" Content="停止" Width="60" Margin="5" Click="StopButton_Click"/>
            <Button x:Name="CaptureButton" Content="拍照" Width="60" Margin="5" Click="CaptureButton_Click"/>
            <Button x:Name="BrowseButton" Content="选择保存路径" Width="100" Margin="5" Click="BrowseButton_Click"/>
        </StackPanel>

        <!-- 状态信息 -->
        <TextBlock Grid.Row="2" x:Name="StatusText" Margin="10" HorizontalAlignment="Center"/>
    </Grid>
</Window>