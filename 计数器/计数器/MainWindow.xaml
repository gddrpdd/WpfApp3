<!-- MainWindow.xaml - 主窗口界面定义 -->
<Window x:Class="MultiFunctionCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="多功能计数器" Height="450" Width="600">

    <!-- 主容器：使用Grid进行整体布局 -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 标题行 -->
            <RowDefinition Height="*"/>
            <!-- 计数器显示行 -->
            <RowDefinition Height="Auto"/>
            <!-- 控制按钮行 -->
            <RowDefinition Height="Auto"/>
            <!-- 步进设置行 -->
            <RowDefinition Height="*"/>
            <!-- 倒计时和日志行 -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- 左栏 -->
            <ColumnDefinition Width="*"/>
            <!-- 右栏 -->
        </Grid.ColumnDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="多功能计数器" 
                   FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- 计数器显示区域 -->
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#f0f0f0" BorderBrush="Gray" BorderThickness="1" 
                CornerRadius="10" Margin="10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- 当前模式显示 -->
                <TextBlock x:Name="tbMode" Text="当前模式：普通计数" FontSize="14" Foreground="Blue" Margin="0,0,0,10"/>

                <!-- 计数值显示 -->
                <TextBlock x:Name="tbCount" Text="0" FontSize="48" FontWeight="Bold" 
                           HorizontalAlignment="Center" Foreground="#2C3E50"/>

                <!-- 倒计时剩余时间显示 -->
                <TextBlock x:Name="tbRemainingTime" Text="" FontSize="16" Foreground="Red" 
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- 基本操作按钮 -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,20">
            <!-- +1 按钮 -->
            <Button x:Name="btnIncrement" Content="+1" Width="80" Height="35" 
                    Background="#27AE60" Foreground="White" FontWeight="Bold" 
                    Click="BtnIncrement_Click" Margin="5"/>

            <!-- -1 按钮 -->
            <Button x:Name="btnDecrement" Content="-1" Width="80" Height="35" 
                    Background="#E74C3C" Foreground="White" FontWeight="Bold" 
                    Click="BtnDecrement_Click" Margin="5"/>

            <!-- 重置按钮 -->
            <Button x:Name="btnReset" Content="重置" Width="80" Height="35" 
                    Background="#95A5A6" Foreground="White" FontWeight="Bold" 
                    Click="BtnReset_Click" Margin="5"/>
        </StackPanel>

        <!-- 步进值设置 -->
        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="步进值：" VerticalAlignment="Center" Margin="0,0,10,0"/>

            <!-- 步进值选择下拉框 -->
            <ComboBox x:Name="cmbStep" Width="80" SelectedIndex="0" 
                      SelectionChanged="CmbStep_SelectionChanged">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="10"/>
            </ComboBox>
        </StackPanel>

        <!-- 倒计时控制 -->
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="10">
            <TextBlock Text="倒计时(秒)：" VerticalAlignment="Center" Margin="0,0,10,0"/>

            <!-- 倒计时时间输入框 -->
            <TextBox x:Name="txtCountdown" Width="60" Text="60"/>

            <!-- 开始倒计时按钮 -->
            <Button x:Name="btnStartCountdown" Content="开始倒计时" Width="100" 
                    Background="#3498DB" Foreground="White" Margin="10,0,0,0" 
                    Click="BtnStartCountdown_Click"/>
        </StackPanel>

        <!-- 操作日志显示 -->
        <GroupBox Grid.Row="4" Grid.ColumnSpan="2" Header="操作日志" Margin="10">
            <!-- 日志列表 -->
            <ListBox x:Name="lstLog" Height="120" Background="White"/>
        </GroupBox>
    </Grid>
</Window>